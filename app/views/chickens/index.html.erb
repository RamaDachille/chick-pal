<h1>Chickens</h1>
<div id="chickens">
  <div class="cards">
    <% @chickens.each do |chicken| %>
      <%= render "chickens/chicken", chicken: chicken %>
      <p>
        <%= link_to "Show this chicken", chicken_path(chicken.id)%>
      </p>
    <% end %>
  </div>
</div>

<%# MAP ---------------- %>
<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
<%# MAP ---------------- %>
