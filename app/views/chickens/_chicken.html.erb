<div class="hvr-grow" id="cardv1">

<%= link_to  chicken_path(chicken.id) do %>

 <div class="card">

  <div class="card-img" style="background-image: url('<%= cl_image_path chicken.photo.key, height: 300, crop: :fill %>')"
>
  </div>

    <div class="card-body">
      <div class="top-text">
        <p class="card-title"><strong><%= chicken.name %></strong></p>
        <p class="card-breed"><strong><%= chicken.breed %></strong></p>
      </div>

      <div class="mid-text">
        <p class="card-age"> <%= chicken.gender.capitalize %>, <%= chicken.age %> years old</p>
            <span class="noise-level">
              <% if chicken.gender == "male" %>
                <% chicken.noise_level %>
                  <% if chicken.noise_level == "low"%>
                      <p><i class="fa-solid fa-volume-off"></i></p>
                  <% elsif chicken.noise_level == "medium"%>
                    <p><i class="fa-solid fa-volume-low"></i></p>
                    <% else %>
                      <p><i class="fa-solid fa-volume-high"></i></p>
                    <% end %>
              <% else %>
                  <% case chicken.egg_capacity %>
                    <% when 1 %>
                      <p>
                      <i class="fa-solid fa-egg"></i>
                      </p>
                    <% when 2 %>
                      <p>
                      <i class="fa-solid fa-egg"></i>
                      <i class="fa-solid fa-egg"></i>
                      </p>
                    <% when 3 %>
                      <p>
                      <i class="fa-solid fa-egg"></i>
                      <i class="fa-solid fa-egg"></i>
                      <i class="fa-solid fa-egg"></i>
                      </p>
                    <% when 4 %>
                      <p>
                      <i class="fa-solid fa-egg"></i>
                      <i class="fa-solid fa-egg"></i>
                      <i class="fa-solid fa-egg"></i>
                      <i class="fa-solid fa-egg"></i>
                      </p>
                    <% when 5 %>
                    <p>
                    <i class="fa-solid fa-egg"></i>
                    <i class="fa-solid fa-egg"></i>
                    <i class="fa-solid fa-egg"></i>
                    <i class="fa-solid fa-egg"></i>
                    <i class="fa-solid fa-egg"></i>
                    </p>
                  <% end %>
              <% end %>
            </span>
      </div>

      <div>
        <p class="price"><u><%= chicken.price %>â‚¬ /day</u></p>
      </div>

    </div>
  </div>
<% end %>
</div>
