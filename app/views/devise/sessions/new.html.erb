<div class="container new_view d-flex justify-content-center">
  <div class="row col-12 col-lg-4">
    <div class="card new p-5" style="font-family: 'Circular Std', sans-serif;">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn first-button w-100", style: "background-color: #FBC209" %>
        </div>
      <% end %>
      <div class="mt-3">
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
